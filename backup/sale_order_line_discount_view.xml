<odoo>
    <data>
        <!-- Extend the Sale Order Line Form View -->
        <record id="view_order_form_inherit" model="ir.ui.view">
            <field name="name">sale.order.line.form.discount</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <!-- Insert x_discount field after price_unit -->
                <xpath expr="//field[@name='price_unit']" position="after">
                    <field name="x_discount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                </xpath>
                    <xpath
                expr="//field[@name='order_line']/list//field[@name='tax_id']" position="after">
                <field name="x_discount" />
            </xpath>
            </field>
        </record>

