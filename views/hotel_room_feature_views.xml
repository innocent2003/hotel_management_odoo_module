<odoo>
    <data>
        <!-- List view for Room Feature -->
        <record id="view_hotel_room_feature_list" model="ir.ui.view">
            <field name="name">hotel.room.feature.list</field>
            <field name="model">hotel.room.feature</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                </list>
            </field>
        </record>

        <!-- Form view for Room Feature -->
        <record id="view_hotel_room_feature_form" model="ir.ui.view">
            <field name="name">hotel.room.feature.form</field>
            <field name="model">hotel.room.feature</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action for Room Feature -->
        <record id="action_hotel_room_feature" model="ir.actions.act_window">
            <field name="name">Room Features</field>
            <field name="res_model">hotel.room.feature</field>
            <field name="view_mode">list,form</field>
            <field name="target">current</field>
        </record>

        <!-- Menu Item for Room Feature -->
        <menuitem name="Room Features" id="menu_hotel_room_features" parent="hotel_menu_root"
                  action="action_hotel_room_feature" sequence="40"/>
    </data>
</odoo>
