<odoo>
    <data noupdate="1">
        <!-- Cron Job to Check Unreserved Rooms -->
        <record id="cron_check_unreserved_rooms" model="ir.cron">
            <field name="name">Check Unreserved Rooms</field>
            <field name="model_id" ref="model_hotel_room"/>
            <field name="state">code</field>
            <field name="code">model.check_unreserved_rooms()</field>
            <field name="interval_type">days</field>
            <field name="interval_number">1</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
        </record>
    </data>
</odoo>
