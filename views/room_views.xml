<odoo>
    <record id="view_room_list" model="ir.ui.view">
        <field name="name">room.list</field>
        <field name="model">room</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="hotel_id"/>
                <field name="features"/>
            </list>
        </field>
    </record>

    <record id="view_room_form" model="ir.ui.view">
        <field name="name">room.form</field>
        <field name="model">room</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="hotel_id"/>
                        <field name="features"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_rooms" model="ir.actions.act_window">
        <field name="name">Rooms</field>
        <field name="res_model">room</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
