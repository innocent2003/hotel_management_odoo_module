<!-- reservation_view.xml -->
<odoo>
    <record id="view_reservation_form" model="ir.ui.view">
        <field name="name">hotel.reservation.form</field>
        <field name="model">hotel.reservation</field>
        <field name="arch" type="xml">
            <form string="Đặt phòng">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="customer_name"/>
                        <field name="reservation_date"/>
                        <field name="hotel_id"/>
                        <field name="room_id"/>
                        <field name="check_in_date"/>
                        <field name="check_out_date"/>
                        <field name="state"/>
                    </group>
                    <footer>
                        <button string="Xác nhận" type="object" name="confirm_reservation" class="btn-primary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
