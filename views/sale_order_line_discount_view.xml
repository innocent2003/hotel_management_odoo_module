<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_inherit_sale_line_discount" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.line.discount</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/list/field[@name='tax_id']" position="after">
                <field name="x_discount" string="Giảm giá" optional="show" />
            </xpath>
        </field>
    </record>
</odoo>