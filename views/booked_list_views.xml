<odoo>
    <data>
        <!-- List view for Reservation -->
        <record id="view_hotel_reservation_list" model="ir.ui.view">
            <field name="name">hotel.reservation.list</field>
            <field name="model">hotel.reservation</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="customer_name"/>
                    <field name="reservation_date"/>
                    <field name="check_in_date"/>
                    <field name="check_out_date"/>
                    <field name="state"/>
                </list>
            </field>
        </record>

        <!-- Form view for Reservation -->
        <record id="view_hotel_reservation_form" model="ir.ui.view">
            <field name="name">hotel.reservation.form</field>
            <field name="model">hotel.reservation</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="customer_name"/>
                            <field name="reservation_date"/>
                            <field name="hotel_id"/>
                            <field name="room_id"/>
                            <field name="check_in_date"/>
                            <field name="check_out_date"/>
                            <field name="state"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action to open the list view with a filter for booked reservations -->
        <record id="action_hotel_reservation_booked" model="ir.actions.act_window">
            <field name="name">Booked Reservations</field>
            <field name="res_model">hotel.reservation</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="view_hotel_reservation_list"/>
            <field name="domain">[('state', '=', 'booked')]</field>
        </record>

        <!-- Menu item for Booked Reservations -->
        <menuitem id="menu_hotel_reservation_booked" name="Booked Reservations"
                  parent="menu_hotel_management" action="action_hotel_reservation_booked"/>
    </data>
</odoo>
