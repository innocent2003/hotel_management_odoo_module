<odoo>
    <data>
        <!-- List View for Reservations -->
        <record id="view_hotel_reservation_list" model="ir.ui.view">
            <field name="name">hotel.reservation.list</field>
            <field name="model">hotel.reservation</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="customer_name"/>
                    <field name="reservation_date"/>
                    <field name="check_in_date"/>
                    <field name="check_out_date"/>
                    <field name="state"/>
                    <!-- Add the approve button in the list header -->
                    <header>
                        <button name="action_approve" type="object" string="Approve Reservations" class="oe_highlight"/>
                    </header>
                </list>
            </field>
        </record>

        <!-- Server Action for Approving Reservations -->
        <record id="action_server_approve_reservations" model="ir.actions.server">
            <field name="name">Approve Reservations</field>
            <field name="model_id" ref="model_hotel_reservation"/>
            <field name="state">code</field>
            <field name="code">
                if not records:
                    raise UserError('Không có đơn đặt phòng nào được chọn.')
                records.action_approve()
            </field>
        </record>
    </data>
</odoo>
