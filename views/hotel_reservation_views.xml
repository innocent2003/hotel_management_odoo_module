<odoo>
    <data>
        <!-- List view for Reservation -->
        <record id="view_hotel_reservation_list" model="ir.ui.view">
            <field name="name">hotel.reservation.list</field>
            <field name="model">hotel.reservation</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="customer_name"/>
                    <field name="reservation_date"/>
                    <field name="check_in_date"/>
                    <field name="check_out_date"/>
                    <field name="state"/>
                </list>
            </field>
        </record>

        <!-- Form view for Reservation -->
        <record id="view_hotel_reservation_form" model="ir.ui.view">
            <field name="name">hotel.reservation.form</field>
            <field name="model">hotel.reservation</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="customer_name"/>
                            <field name="reservation_date"/>
                            <field name="hotel_id"/>
                            <field name="room_id"/>
                            <field name="check_in_date"/>
                            <field name="check_out_date"/>
                            <field name="state"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>



        <record id="action_report_booking" model="ir.actions.report">
        <field name="name">Booking Report</field>
        <field name="model">hotel.reservation</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">admin_hotel.report_booking</field>
        <field name="report_file">admin_hotel.report_booking</field>
        <field name="binding_model_id" ref="model_hotel_reservation"/>
        <field name="binding_type">report</field>
    </record>
    </data>
</odoo>
