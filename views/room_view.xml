<!-- room_view.xml -->
<odoo>
    <record id="view_room_form" model="ir.ui.view">
        <field name="name">hotel.room.form</field>
        <field name="model">hotel.room</field>
        <field name="arch" type="xml">
            <form string="Quản lý phòng">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="hotel_id"/>
                        <field name="address"/>
                        <field name="bed_type"/>
                        <field name="price"/>
                        <field name="state"/>
                        <field name="feature_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
