<odoo>
    <data noupdate="1">
        <!-- Employee Group -->
        <record id="group_employee" model="res.groups">
            <field name="name">Employee</field>
            <field name="category_id" ref="base.module_category_administration"/>
        </record>

        <!-- Manager Group -->
        <record id="group_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="base.module_category_administration"/>
            <field name="implied_ids" eval="[(4, ref('admin_hotel.group_employee'))]"/>
        </record>

        <!-- Administrator Group -->
        <record id="group_administrator" model="res.groups">
            <field name="name">Administrator</field>
            <field name="category_id" ref="base.module_category_administration"/>
            <field name="implied_ids" eval="[(4, ref('admin_hotel.group_manager'))]"/>
        </record>
    </data>
</odoo>
